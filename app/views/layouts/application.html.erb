<head> 
	<meta charset="utf-8" /> 

	<title>IsVael Sport</title> 
	<meta name="description" content="<%= controller.action_name %>" /> 

	<!--[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<%= stylesheet_link_tag 'global' %>
	<%#= stylesheet_link_tag 'jquery-ui' %>
	<%#= stylesheet_link_tag 'tipsy' %>
	<%= stylesheet_link_tag 'shadowbox' %>
	<%= stylesheet_link_tag "#{controller.controller_name}/#{controller.action_name}" %>

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
	<!--script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js"></script-->
	
	<%= csrf_meta_tag %>
	
	<script type="text/javascript">
	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-12933095-12']);
	  _gaq.push(['_setDomainName', '.isvael.com']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
	</script>
</head>

<body>
	<header>
		<nav>
			<ul class="container">
				<li class="<%= "current" if "#{controller.controller_name}/#{controller.action_name}" == "home/index" %>"><a href="/"><%=t 'nav.home' %></a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "about" %>"><a href="/about"><%=t 'nav.about' %></a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "products" %>"><a href="/products"><%=t 'nav.products' %></a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "services" %>"><a href="/services"><%=t 'nav.services' %></a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "events" %>"><a href="/events"><%=t 'nav.events' %></a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "posts" %>"><a href="/news"><%=t 'nav.news' %></a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "gallery" %>"><a href="/gallery"><%=t 'nav.gallery' %></a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "contacts" %>"><a href="/contact"><%=t 'nav.contact' %></a></li>
				<li id="lingoLink" class="">
					<% if I18n.locale.to_s == 'es' %>
						<a href="http://isvael.com">In English</a>
					<% else %>
						<a href="http://es.isvael.com">En Espa√±ol</a>
					<% end %>
				</li>
			</ul>
			
			<a id="logo" href="/"><%= image_tag('global/logo.png', :alt => 'IsVael Sport') %></a>
		</nav>
	</header>
	
	<section id="main">		
		<div id="content" class="clearfix">
			<%= yield %>
		</div>
		
		<footer class="container">
			IsVael Sport<br />
			30755 E. Loma Linda Rd.<br />
			Temecula, California, 92592<br />
			(951) 699-8969
		</footer>
	</section>

	<%#= javascript_include_tag 'jquery.tipsy' %>
	<%= javascript_include_tag 'shadowbox' %>
	<%= javascript_include_tag 'global' %>
	<%= javascript_include_tag "#{controller.controller_name}/#{controller.action_name}" %>
	
	<script type="text/javascript">
	Shadowbox.init();
	</script>
</body>
</html>